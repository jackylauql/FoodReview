<div>
    <label>Food</label>
    <input type="text" name="name" value="<%=food.name%>">
</div>
<div>
    <fieldset>
    <label>Address</label>
    <input type="text" name="address" value="<%=food.address%>">
    <label>Area Code(First 2 Digits of Postal Code)</label>
    <input type="text" name="postalcode" value="<%=food.postalcode%>" maxlength="2" pattern="\d*" placeholder="Numbers Only">
    </fieldset>
</div>
<div>
    <label for="ratings">Ratings</label>
    <select id="ratings" name="ratings" value="<%=food.ratings%>">
        <option value="1 Star">1 Star</option>
        <option value="2 Star">2 Star</option>
        <option value="3 Star">3 Star</option>
        <option value="4 Star">4 Star</option>
        <option value="5 Star">5 Star</option>
    </select>
</div>
<div>
    <label>Price</label>
    <input type="number" name="price" value="<%=food.price%>">
</div>

<div>
    <label>Types</label>
    <%- include('./partials/types.ejs') %>
</div>
<div>
    <% if (food.errorMessage) { %>
        <p><%=food.errorMessage%></p>
        <% food.errors.forEach(error => { %>
            <p>- <%= error %></p>
        <% }) %>
    <% } %>
</div>